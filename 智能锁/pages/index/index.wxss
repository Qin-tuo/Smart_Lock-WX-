/**index.wxss**/
.container{ 
  padding: 30rpx;
}
.header{
  background-color: #3d7ef9;
  color: white;
  margin-top: 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  height: 200rpx;
}
.one{
  display: flex;
  margin-top: 20rpx;
  margin-left: 20rpx;
  justify-content: space-between;
}
.one text{
  font-size: 40rpx;
  height: 28rpx;
  padding-bottom: 15rpx;
}
.two{
  margin-top: 20rpx;
  margin-left: 12rpx;
  display: flex;
  justify-content: space-between;
}
.two text{
  font-size: 52rpx;
  padding-bottom: 15rpx;
}
.three text{
  font-size: 22rpx;
}
/*body*/
.body-wrapper{
  margin-top: 200rpx;
  margin-left:63rpx;
  display: flex;
  justify-content: space-between;
  
}

.date-logo image{
  width: 300rpx;
  height: 300rpx;
}
.date{
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  width: 600rpx;
  height: 360rpx;
  border-radius:40rpx ;
  box-shadow: #77778a 0 0 10rpx;
  padding: 0 15rpx;
}
.date-logo{
  display: flex;
  align-items: center;
}
.date-text{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 65rpx;
}
.date-value{
  font-size: 50rpx;
}

.switch_info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.switch_style {
  margin-top: 5px;
  margin-bottom: 5rpx;
}

.connected {
  color: green;
  font-size: 50px;
}

.unconnnected {
  color: red
}